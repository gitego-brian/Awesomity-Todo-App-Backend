{
  "name": "awesomity-todo-app-backend",
  "version": "1.0.0",
  "description": "API of ToDo App as a challenge from Awesomity",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test DEBUG=app:test:* nyc --reporter=text mocha --require @babel/register ./src/__tests__/*.test.js --timeout 10000 --exit",
    "test:watch": "DEBUG=app:test:* jest --watchAll",
    "start": "DEBUG=app:app,sequelize babel-node ./src",
    "dev": "DEBUG=app:* nodemon --exec babel-node ./src",
    "sync": "DEBUG=sequelize  babel-node ./src/database/services/sync.js",
    "sync:force": "DEBUG=sequelize  babel-node ./src/database/services/forceSync.js",
    "sync:test": "NODE_ENV=test babel-node ./src/database/services/forceSync.js --exit",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gitego-brian/Awesomity-Todo-App-Backend.git"
  },
  "keywords": [
    "Todo",
    "Awesomity",
    "Backend",
    "API",
    "Challenge"
  ],
  "author": "Brian Gitego",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gitego-brian/Awesomity-Todo-App-Backend/issues"
  },
  "homepage": "https://github.com/gitego-brian/Awesomity-Todo-App-Backend#readme",
  "dependencies": {
    "@babel/cli": "^7.12.17",
    "@babel/core": "^7.12.17",
    "@babel/node": "^7.12.17",
    "@babel/preset-env": "^7.12.17",
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "debug": "^2.6.9",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "pg-native": "^3.0.0",
    "sequelize": "^6.5.0",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.12.17",
    "@babel/register": "^7.12.13",
    "chai": "^4.3.0",
    "coveralls": "^3.1.0",
    "jest": "^26.6.3",
    "mocha": "^8.3.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "sinon": "^9.2.4",
    "supertest": "^6.1.3"
  }
}
